{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "module": "commonjs",
    "target": "es2018",
    "sourceMap": true,
    // "noImplicitAny": true,
    "skipLibCheck": true,
    "types": [
      "node",
      "jest"
    ], // Add 'jest' here
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./src/**/*.ts",
    "./__tests__/**/*" // Ensure test files are included
  ]
}